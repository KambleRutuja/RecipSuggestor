@model RecipSuggestor.Models.IngList

@{
    ViewBag.Title = "ShowIng";
    int i = 0, j;
}

<h5>Pick the Ingredient from Pantry. which will use in recipe</h5>
<hr />

@using (Html.BeginForm())
{
    <table class="table" align="center">
        <tr class="tab-pane" style="column-span:all;align-self:center;align-items:center;">
            <td class="table-active"><h3>Ingredient List</h3></td>
        </tr>
    
    @while (i < Model.IngrList.Count)
    {
        <tr>
            @for(j = 0; j != 3 && i < Model.IngrList.Count; j++, i++)
            {
                <td>
                    @Html.CheckBoxFor(m => Model.IngrList[i].isChecked)
                    @Model.IngrList[i].name
                    @Html.HiddenFor(m => Model.IngrList[i].id)
                    @Html.HiddenFor(m => Model.IngrList[i].type)
                </td>
            }
        </tr>
        //i++;
    }
    <tr style="column-span:all;align-items:center;">
        <td><input type="submit" value="Search" /></td>
    </tr>
    @*<input type="submit" value="Search" /></center>*@
    </table>
}


